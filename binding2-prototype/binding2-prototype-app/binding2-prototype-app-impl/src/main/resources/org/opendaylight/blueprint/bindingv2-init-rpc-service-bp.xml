<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0">

  <reference id="schemaService" interface="org.opendaylight.mdsal.dom.api.DOMSchemaService" />

  <bean id="domRpcRouter" class="org.opendaylight.mdsal.dom.broker.DOMRpcRouter"
          factory-method="newInstance">
    <argument ref="schemaService"/>
  </bean>

  <service ref="domRpcRouter" interface="org.opendaylight.mdsal.dom.api.DOMRpcProviderService" odl:type="default"/>

</blueprint>
